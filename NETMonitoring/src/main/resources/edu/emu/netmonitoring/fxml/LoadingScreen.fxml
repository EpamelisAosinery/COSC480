<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Pos?>
<?import de.jensd.fx.glyphs.fontawesome.*?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" prefWidth="800" prefHeight="600">
    <!-- Background -->
    <VBox style="-fx-background-color: linear-gradient(to bottom, #8E44AD, #E91E63); -fx-border-color: #fff; -fx-border-width: 2px;" prefWidth="800" prefHeight="600">
        <!-- Loading Content -->
        <VBox spacing="20" alignment="CENTER" prefWidth="800" prefHeight="600">
            <Label text="Welcome" style="-fx-text-fill: white; -fx-font-size: 48; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.6), 10, 0, 0, 0);" />
            <Label text="Loading..." style="-fx-text-fill: white; -fx-font-size: 36; -fx-font-weight: bold; -fx-translate-y: -20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.6), 10, 0, 0, 0);" />
            <ProgressBar prefWidth="400" prefHeight="20" maxWidth="Infinity" />
        </VBox>
    </VBox>
</StackPane>
